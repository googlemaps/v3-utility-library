{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["master"]
    },
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "message": "chore: release"
    }
  },
  "ignoreChanges": ["**/examples/**", "**/tests/**", "**/docs/**", "**/*.md"]
}
