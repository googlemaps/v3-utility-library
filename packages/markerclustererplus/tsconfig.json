{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "target": "es6",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.*"],
  "esModuleInterop": true
}
